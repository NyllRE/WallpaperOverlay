<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <enum id="org.gnome.shell.extensions.WallpaperOverlay.overlay-style">
      <value value="0" nick="Bottom Gradient Waves"/>
      <value value="1" nick="Top Solid Convex"/>
    </enum>
  <schema id="org.gnome.shell.extensions.WallpaperOverlay"
    path="/org/gnome/shell/extensions/WallpaperOverlay/">

    <key name="picture-uri" type = "s">
      <default>"/usr/share/backgrounds"</default>
      <summary>Path to your wallpaper folder</summary>
      <description>Specify the folder in which your wallpapers are stored</description>
    </key>

    <key name="overlay-uri" type = "s">
      <default>"/usr/share/backgrounds"</default>
      <summary>Path to your wallpaper folder</summary>
      <description>Specify the folder in which your wallpapers are stored</description>
    </key>

    <key name="overlay-color" type = "s">
      <default>"#ffffff"</default>
      <summary>Path to your wallpaper folder</summary>
      <description>Specify the folder in which your wallpapers are stored</description>
    </key>

    <key name="overlay-style" enum = "org.gnome.shell.extensions.WallpaperOverlay.overlay-style">
      <default>0</default>
      <summary>Change wallpaper Overlay Style</summary>
      <description>Choose which effect to put overlay on wallpaper</description>
    </key>

    <key name="is-custom-overlay" type="b">
      <default>False</default>
      <summary>Change wallpaper Overlay Style</summary>
      <description>Choose which effect to put overlay on wallpaper</description>
    </key>

    <!-- <key name="error-msg" type = "s">
      <default>"err"</default>
      <summary>Error msg to show on prefs</summary>
    </key> -->


  </schema>
</schemalist>
